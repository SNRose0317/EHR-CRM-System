{
  "name": "ehr-crm-system",
  "version": "1.0.0",
  "description": "Full-scale EHR/CRM platform for Marek Health - integrated patient management, appointment scheduling, lab results, and medication management system",
  "private": true,
  "scripts": {
    "dev": "turbo run dev --filter=platform-core",
    "build": "turbo run build",
    "test": "turbo run test",
    "lint": "turbo run lint",
    "typecheck": "turbo run typecheck",
    "clean": "turbo run clean",
    "config:validate": "cd config && pnpm validate",
    "config:list-presets": "cd config && pnpm list-presets",
    "config:list-user-types": "cd config && pnpm list-user-types",
    "config:create-custom": "cd config && pnpm create-custom",
    "config:test": "cd config && pnpm test-config",
    "config:test:unit": "cd config && pnpm test",
    "config:test:coverage": "cd config && pnpm test:coverage"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "turbo": "^2.5.5",
    "typescript": "^5.0.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=9.0.0"
  },
  "packageManager": "pnpm@10.13.1"
}