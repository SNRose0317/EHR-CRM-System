{
  "name": "@marek/domain-config",
  "version": "2.1.0",
  "description": "Domain configuration system for EHR/CRM platform",
  "private": true,
  "type": "module",
  "scripts": {
    "validate": "tsx tools/validate-config.ts",
    "list-presets": "tsx tools/list-presets.ts",
    "list-user-types": "tsx tools/list-user-types.ts",
    "create-custom": "tsx tools/create-custom.ts",
    "test-config": "tsx tools/test-config.ts",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:ci": "jest --ci --coverage --watchAll=false"
  },
  "dependencies": {
    "@marek/shared": "workspace:*"
  },
  "devDependencies": {
    "@types/jest": "^29.5.0",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.0",
    "tsx": "^4.0.0",
    "typescript": "^5.0.0"
  },
  "exports": {
    "./environment": {
      "import": "./environment.js",
      "types": "./environment.d.ts"
    },
    "./user-types": {
      "import": "./user-types/index.js", 
      "types": "./user-types/index.d.ts"
    },
    "./deployment-presets": {
      "import": "./deployment-presets/index.js",
      "types": "./deployment-presets/index.d.ts"
    },
    "./tools": {
      "import": "./tools/index.js",
      "types": "./tools/index.d.ts"
    }
  },
  "files": [
    "environment.js",
    "environment.d.ts",
    "user-types/",
    "deployment-presets/",
    "tools/"
  ]
}